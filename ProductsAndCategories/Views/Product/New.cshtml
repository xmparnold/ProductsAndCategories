@model Product

 <form class="shadow p-3 rounded" asp-controller="Product" asp-action="Create" method="POST">
    <div class="mb-3">
      <label asp-for="Name"></label>
      <span asp-validation-for="Name" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
      <label asp-for="Price"></label>
      <span asp-validation-for="Price" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Price">
    </div>

    <button class="btn btn-success">Submit</button>
 </form>